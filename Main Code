from modules.port_scanner import port_scan
from modules.header_analyzer import analyze_headers
from modules.dir_enum import directory_enum

def menu():
    print("""
[ Penetration Testing Toolkit ]
1. Port Scanner
2. HTTP Header Analyzer
3. Directory Enumeration
4. Exit
""")

while True:
    menu()
    choice = input("Select an option: ")

    if choice == "1":
        target = input("Enter target IP/domain: ")
        port_scan(target)

    elif choice == "2":
        url = input("Enter target URL: ")
        analyze_headers(url)

    elif choice == "3":
        url = input("Enter target URL: ")
        directory_enum(url)

    elif choice == "4":
        print("Exiting toolkit...")
        break

    else:
        print("Invalid choice!")
